SetEnv magic_quotes_gpc 1
SetEnv magic_quotes_runtime 0
SetEnv magic_quotes_sybase 0
SetEnv REGISTER_GLOBALS 0

#AddHandler php5-script .php

RewriteEngine on

#RewriteCond %{HTTP_HOST} ^.*aaaaaaaaaaa\.org [NC]
#RewriteCond %{HTTP_HOST} !^www\.aaaaaaaaaaa.org [NC]
#RewriteRule ^(.*)  http://www.aaaaaaaaaaa.org/$1 [L,R]

#HOME
RewriteRule ^/?$ index.php?page=homepage [L]

# REMOTE
RewriteRule ^remote/([a-zA-Z0-9_\/]+)$ index.php?remote=$1 [L,QSA]

# SUBMIT
RewriteRule ^submit$ index.php?page=submit [L]

# LOGOUT
RewriteRule ^logout$ index.php?remote=logout [L]

# QUESTION
RewriteRule ^question/[a-zA-Z0-9_-]*-([0-9]+)$ index.php?page=question&id=$1 [L]

# CATEGORY
#RewriteRule ^category/([a-zA-Z0-9_-]*)/*([0-9]*)$ index.php?page=question_list&guid=$1&p=$2 [L]
#RewriteRule ^category/([a-zA-Z0-9_-]*)/archives/*([0-9]*)$ index.php?page=question_list&guid=$1&p=$2&archive=1 [L]

# COMMUNITY
#RewriteRule ^users/*([0-9]*)$ index.php?page=user_list&p=$1 [L]
#RewriteRule ^users/search/([^/]+)/*([0-9]*)$ index.php?page=user_list&query=$1&p=$2 [L]

# BACKOFFICE
RewriteRule ^backoffice/?$ backoffice/index.php [L]
RewriteRule ^backoffice/remote/([a-zA-Z0-9_]+)$ backoffice/index.php?remote=$1 [L,QSA]

# USER
RewriteRule ^([a-zA-Z0-9_]+)$ index.php?page=user&login=$1 [L]
RewriteRule ^([a-zA-Z0-9_]+)/confirm$ index.php?page=user_confirm [L,QSA]

